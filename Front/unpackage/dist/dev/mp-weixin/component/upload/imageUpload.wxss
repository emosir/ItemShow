
.container {
  padding: 10px;
}
.upload-section {
  margin-top: 20px;
}
.uni-title {
  font-size: 16px;
  color: #333;
  margin-bottom: 10px;
}
.image-list {
  display: flex;
  flex-wrap: wrap;
}
.image-item {
  position: relative;
  width: 60px;
  height: 60px;
  margin-right: 10px;
  margin-bottom: 10px;
}
.image-item image {
  width: 100%;
  height: 100%;
}
.delete-icon {
  position: absolute;
  top: 0;
  right: 0;
  color: #f00;
  font-size: 24px;
  cursor: pointer;
}
.add-image {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60px;
  height: 60px;
  background-color: #f0f0f0;
  font-size: 24px;
  color: #999;
  cursor: pointer;
}

